<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/tools"

    android:clickable="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:textColor="#000000"
        app:layout_heightPercent="55%h"
        app:layout_widthPercent="50%w"
        app:layout_marginTopPercent="13%h"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/volume_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="2%h"
        app:layout_widthPercent="30%w"
        app:layout_marginTopPercent="75%h"
        app:layout_marginLeftPercent="35%w"
        android:max="100"
        android:progressDrawable="@drawable/progressbar_color" />

    <TextView
        android:id="@+id/tv_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="当前正在播报"
        app:layout_textSizePercent="2.5%w"
        app:layout_marginTopPercent="83%h"
        app:layout_marginLeftPercent="41%w"
        />

    <Button
        style="@android:style/Widget.Holo.Button"
        android:id="@+id/stop_speck"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="12%h"
        app:layout_widthPercent="17%w"
        android:text="停止播报"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        app:layout_marginTopPercent="85%h"
        app:layout_marginLeftPercent="80%w"
        />









    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/father_button_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="9%h"
        app:layout_widthPercent="9%h"
        app:layout_marginTopPercent="76%h"
        app:layout_marginLeftPercent="27%w"
        fab:fab_addButtonColorNormal="@color/pink"
        fab:fab_addButtonColorPressed="@color/half_pink"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style"
        >


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_refresh_location"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="8%h"
            app:layout_widthPercent="8%h"
            fab:fab_title="设置音量"
            fab:fab_icon="@drawable/voice_value"
            fab:fab_colorNormal="@color/blue_semi_transparent"
            fab:fab_colorPressed="@color/blue_semi_transparent_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_voice_gps"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="8%h"
            app:layout_widthPercent="8%h"
            fab:fab_title="设置发音人"
            fab:fab_icon="@drawable/voice_name"
            fab:fab_colorNormal="@color/blue_semi_transparent"
            fab:fab_colorPressed="@color/blue_semi_transparent_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_close_voice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="8%h"
            app:layout_widthPercent="8%h"
            fab:fab_title="设置语速"
            fab:fab_icon="@drawable/voice_speed"
            fab:fab_colorNormal="@color/blue_semi_transparent"
            fab:fab_colorPressed="@color/blue_semi_transparent_pressed"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</com.zhy.android.percent.support.PercentRelativeLayout>